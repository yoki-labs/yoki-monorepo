{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "./dist",
		"noImplicitAny": false,
		"skipLibCheck": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"declarationMap": false
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.json"
	],
	"exclude": [
		"*.test.ts"
	]
}