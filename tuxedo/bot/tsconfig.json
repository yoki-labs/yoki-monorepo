{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "./dist",
        "noImplicitAny": false,
        "skipLibCheck": true,
        "declaration": false,
        "declarationMap": false,
        "paths": {
            "@yokilabs/bot": ["../../yokilabs/bot/src"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.json"],
    "exclude": ["*.test.ts", "../../yokilabs/**/dist/**"],
    "references": [
        {
            "path": "../../yokilabs/bot"
        }
    ]
}
