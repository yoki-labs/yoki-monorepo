{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "./dist",
        "noImplicitAny": false,
        "skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
        "paths": {
            "@yokilabs/util": ["../../yokilabs/util/src"],
            "@yokilabs/bot": ["../../yokilabs/bot/src"],
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.json", "../../yokilabs/**/*.ts"],
    "exclude": ["*.test.ts"]
}
