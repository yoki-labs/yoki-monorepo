generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Server {
    id          Int          @id @default(autoincrement())
    serverId    String       @unique @db.VarChar(255)
    botJoinedAt DateTime?    @default(now())
    premium     PremiumType?
    locale      String       @default("en-US")
    prefix      String?
}

enum PremiumType {
    Gold
    Silver
}
