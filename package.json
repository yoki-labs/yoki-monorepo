{
	"name": "@yoki/main",
	"private": true,
	"version": "0.0.0",
	"description": "Overarching repository for Yoki",
	"author": "Zaid \"Nico\" <contact@nico.engineer>",
	"scripts": {
		"#": "Scripts for building the typescript/prisma code in all the services. They're sectioned by shared local packages and services",
		"build": "pnpm -r --filter=!@yoki/site run build",
		"build:deps": "pnpm -r --filter=@yokilabs/** run build",
		"build:yoki": "pnpm build:deps && pnpm -r --filter=!@yoki/site --filter=!@yoki/api --filter=@yoki/** run build",
		"build:tuxedo": "pnpm build:deps && pnpm -r --filter=@tuxedo/** run build",
		"generate": "cd yoki/bot && pnpm generate",
		"##": "Scripts for code quality and CI",
		"lint:bots": "eslint -c .eslintrc.js yoki/bot yoki/nsfw tuxedo/bot yokilabs/bot yokilabs/util",
		"lint:web": "eslint -c .eslintrc.web.js yoki/site",
		"lint": "pnpm run lint:web && pnpm run lint:bots",
		"lint:fix": "pnpm run lint:web --fix && pnpm run lint:bots --fix",
		"prepare": "husky install",
		"prettier": "prettier --write **/*.{ts,js,json,yml,yaml,md}",
		"###": "Scripts for docker related util. Starting up a dev env, or deploying in a prod env",
		"yk:start": "pnpm yk:docker up -d --build && pnpm yk:docker logs --follow bot nsfw ",
		"yk:db": "pnpm yk:docker up -d --build db",
		"yk:api": "pnpm yk:db api",
		"yk:down": "pnpm yk:docker down",
		"yk:logs": "pnpm yk:docker logs -f bot nsfw",
		"yk:migrate": "cd yoki/bot && pnpm migrate:dev",
		"tx:docker": "cd docker/tuxedo && docker-compose -f docker-compose.yml -f docker-compose.dev.yml",
		"tx:db": "pnpm tx:docker up -d --build db",
		"tx:start": "pnpm tx:docker up -d --build && pnpm tx:docker logs --follow bot",
		"tx:down": "pnpm tx:docker down",
		"tx:migrate": "cd tuxedo/bot && pnpm migrate:dev",
		"tx:migrate:prod": "cd tuxedo/bot && pnpm migrate:prod",
		"####": "These are 'prefix' scripts. They're used in other scripts. The purpose of these is to make sure we aren't repeating long commands.",
		"yk:docker": "cd docker/yoki && docker-compose -f docker-compose.yml -f docker-compose.dev.yml",
		"yk:docker:prod": "cd docker/yoki && docker-compose -f docker-compose.yml -f docker-compose.prod.yml",
		"yk:start:prod": "pnpm yk:docker:prod up -d --build",
		"yk:down:prod": "pnpm yk:docker:prod down",
		"yk:logs:prod": "pnpm yk:docker:prod logs -f bot nsfw",
		"yk:migrate:prod": "cd yoki/bot && pnpm migrate:prod"
	},
	"devDependencies": {
		"@sapphire/eslint-config": "^4.4.1",
		"@types/node": "^17.0.45",
		"@types/rimraf": "3.0.2",
		"dotenv": "^16.0.3",
		"eslint": "8.38.0",
		"eslint-config-next": "13.3.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "4.0.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"husky": "7.0.4",
		"lint-staged": "12.3.7",
		"prettier": "2.8.7",
		"pretty-quick": "3.1.3",
		"prisma": "~4.8.1",
		"rimraf": "3.0.2"
	},
	"dependencies": {
		"typescript": "^4.9.5"
	},
	"workspaces": [
		"yokilabs/util",
		"yokilabs/bot",
		"yoki/bot",
		"yoki/nsfw",
		"yoki/site",
		"tuxedo/bot"
	],
	"prettier": {
		"endOfLine": "auto",
		"printWidth": 180,
		"semi": true,
		"tabWidth": 4
	},
	"lint-staged": {
		"yokilabs/{bot,util}/src/*.{js,ts}": "npx eslint -c .eslintrc.js --fix",
		"yoki/{bot,nsfw,api}/src/*.{js,ts}": "npx eslint -c .eslintrc.js --fix",
		"tuxedo/**/*.{js,ts}": "npx eslint -c .eslintrc.js --fix",
		"yoki/site/src/*.{ts,tsx}": "npx eslint -c .eslintrc.web.js --fix"
	}
}