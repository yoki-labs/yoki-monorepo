{
    "name": "@yoki/main",
    "private": true,
    "version": "0.0.0",
    "description": "Overarching repository for Yoki",
    "author": "Zaid \"Nico\" <contact@nico.engineer>",
    "scripts": {
        "build": "pnpm -r --filter=!@yoki/site run build",
        "lint": "pnpm -r run lint",
        "lint:fix": "pnpm lint --fix",
        "prepare": "husky install",
        "prettier": "prettier --write **/*.{ts,js,json,yml,yaml,md}",
        "generate": "cd yoki/bot && pnpm generate",
        "yk:docker": "cd docker/compose && docker-compose -f yoki-compose.yml -f yoki-compose.dev.yml",
        "yk:start": "pnpm yk:docker up -d --build && pnpm yk:docker logs --follow bot nsfw ",
        "yk:db": "pnpm yk:docker up -d --build db",
        "yk:down": "pnpm yk:docker down",
        "yk:logs": "pnpm yk:docker logs -f bot nsfw",
        "yk:migrate": "cd yoki/bot && pnpm migrate:dev",
        "tx:docker": "cd docker/compose && docker-compose -f tuxo-compose.yml -f tuxo-compose.dev.yml",
        "tx:db": "pnpm tx:docker up -d --build db",
        "tx:start": "pnpm tx:docker up -d --build && pnpm tx:docker logs --follow bot",
        "tx:down": "pnpm tx:docker down",
        "tx:migrate": "cd tuxedo/bot && pnpm migrate:dev",
        "tx:migrate:prod": "cd tuxedo/bot && pnpm migrate:prod",
        "yk:docker:prod": "cd docker/compose && docker-compose -f yoki-compose.yml -f yoki-compose.prod.yml",
        "yk:start:prod": "pnpm yk:docker up -d --build",
        "yk:down:prod": "pnpm yk:docker down",
        "yk:logs:prod": "pnpm yk:docker logs -f bot nsfw",
        "yk:migrate:prod": "cd yoki/bot && pnpm migrate:prod"
    },
    "devDependencies": {
        "@sapphire/eslint-config": "^4.3.2",
        "@types/node": "^17.0.21",
        "@types/rimraf": "3.0.2",
        "@typescript-eslint/eslint-plugin": "5.47.1",
        "@typescript-eslint/parser": "5.47.1",
        "dotenv": "^16.0.0",
        "eslint": "8.31.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "12.1.6",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "^7.31.7",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "7.0.4",
        "lint-staged": "12.3.7",
        "prettier": "2.6.0",
        "pretty-quick": "3.1.3",
        "prisma": "~4.8.0",
        "rimraf": "3.0.2"
    },
    "dependencies": {
        "typescript": "^4.9.5"
    },
    "workspaces": [
        "yokilabs/util",
        "yokilabs/bot",
        "yoki/bot",
        "yoki/nsfw",
        "yoki/site",
        "tuxedo/bot"
    ],
    "prettier": {
        "endOfLine": "auto",
        "printWidth": 180,
        "semi": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "yoki-labs/bot/src/*.{js,ts}": "npx eslint -c ./yoki-labs/bot/.eslintrc.json --fix",
        "yoki-labs/util/src/*.{js,ts}": "npx eslint -c ./yoki-labs/util/.eslintrc.json --fix",
        "yoki/bot/src/*.{js,ts}": "npx eslint -c ./yoki/bot/.eslintrc.json --fix",
        "yoki/nsfw/src/*.{js,ts}": "npx eslint -c ./yoki/nsfw/.eslintrc.json --fix",
        "yoki/site/src/*.{ts,tsx}": "npx eslint -c ./yoki/site/.eslintrc.json --fix"
    }
}