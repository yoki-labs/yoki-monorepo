{
    "name": "@yoki/main",
    "private": true,
    "version": "0.0.0",
    "description": "Overarching repository for Yoki",
    "author": "Zaid \"Nico\" <contact@nico.engineer>",
    "scripts": {
        "build": "yarn workspaces run build",
        "lint": "yarn workspaces run lint",
        "lint:fix": "yarn lint --fix",
        "prepare": "husky install",
        "prettier": "prettier --write **/*.{ts,js,json,yml,yaml,md}",
        "generate": "cd yoki/bot && yarn generate",
        "refresh": "ts-node scripts/refresh.ts",
		"dev:prefix": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.dev.yml",
        "dev:start": "yarn dev:prefix up -d --build && yarn dev:prefix logs --follow bot nsfw ",
        "dev:db": "yarn dev:prefix up -d --build db",
        "dev:down": "yarn dev:prefix down",
        "dev:logs": "yarn dev:prefix logs -f bot nsfw",
		"prod:prefix": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.prod.yml",
        "prod:start": "yarn prod:start up -d --build",
        "prod:down": "yarn prod:start down",
        "prod:logs": "yarn prod:start logs -f bot nsfw",
        "migrate:dev": "cd yoki/bot && yarn migrate:dev"
    },
    "devDependencies": {
        "@sapphire/eslint-config": "^4.3.2",
        "@types/node": "^17.0.21",
        "@types/rimraf": "3.0.2",
        "@typescript-eslint/eslint-plugin": "5.47.1",
        "@typescript-eslint/parser": "5.47.1",
        "dotenv": "^16.0.0",
        "eslint": "8.31.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "12.1.6",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "^7.31.7",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "7.0.4",
        "lint-staged": "12.3.7",
        "prettier": "2.6.0",
        "pretty-quick": "3.1.3",
        "rimraf": "3.0.2"
    },
    "dependencies": {
        "typescript": "^4.0.5"
    },
    "workspaces": [
        "yoki/bot",
        "yoki/nsfw",
        "yoki/site"
    ],
    "prettier": {
        "endOfLine": "auto",
        "printWidth": 180,
        "semi": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "yoki/bot/src/*.{js,ts}": "npx eslint -c ./yoki/bot/.eslintrc.js --fix",
        "yoki/nsfw/src/*.{js,ts}": "npx eslint -c ./yoki/nsfw/.eslintrc.js --fix",
        "yoki/site/src/*.{ts,tsx}": "npx eslint -c ./yoki/site/.eslintrc.js --fix"
    }
}
