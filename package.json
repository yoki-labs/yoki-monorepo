{
    "name": "@yoki/main",
    "private": true,
    "version": "0.0.0",
    "description": "Overarching repository for Yoki",
    "author": "Zaid \"Nico\" <contact@nico.engineer>",
    "scripts": {
        "build": "yarn workspaces run build",
        "lint": "yarn workspaces run lint",
        "lint:fix": "yarn lint --fix",
        "prepare": "husky install",
        "prettier": "prettier --write **/*.{ts,js,json,yml,yaml,md}",
        "generate": "cd services/bot && yarn generate",
        "refresh": "ts-node scripts/refresh.ts",
        "dev:start": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build && docker-compose -f docker-compose.yml -f docker-compose.dev.yml logs --follow bot nsfw ",
        "dev:db": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build db",
        "dev:down": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
        "dev:logs": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.dev.yml logs -f bot nsfw",
        "prod:start": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
        "prod:down": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.prod.yml down",
        "prod:logs": "cd docker/compose && docker-compose -f docker-compose.yml -f docker-compose.prod.yml logs -f bot nsfw",
        "migrate:dev": "cd services/bot && yarn migrate:dev"
    },
    "devDependencies": {
        "@sapphire/eslint-config": "^4.3.2",
        "@types/node": "^17.0.21",
        "@types/rimraf": "3.0.2",
        "@typescript-eslint/eslint-plugin": "5.16.0",
        "@typescript-eslint/parser": "5.16.0",
        "dotenv": "^16.0.0",
        "eslint": "8.11.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "12.1.6",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "^7.31.7",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "7.0.4",
        "lint-staged": "12.3.7",
        "prettier": "2.6.0",
        "pretty-quick": "3.1.3",
        "rimraf": "3.0.2"
    },
    "dependencies": {
        "typescript": "^4.0.5"
    },
    "workspaces": [
        "services/bot",
        "services/nsfw",
        "services/landing",
        "services/dashboard"
    ],
    "prettier": {
        "endOfLine": "auto",
        "printWidth": 180,
        "semi": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "services/bot/src/*.{js,ts}": "npx eslint -c ./services/bot/.eslintrc.json --fix",
        "services/nsfw/src/*.{js,ts}": "npx eslint -c ./services/nsfw/.eslintrc.json --fix",
        "services/landing/src/*.{ts,tsx}": "npx eslint -c ./services/landing/.eslintrc.json --fix",
        "services/dashboard/src/*.{js,jsx}": "npx eslint -c ./services/dashboard/.eslintrc.json --fix"
    }
}
