{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
        "composite": true,
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.json"],
    "exclude": ["*.test.ts", "../**/dist/**"]
}
